#include <stdio.h>

int main() {
    int age, years_left;

    printf("Enter your age: ");
    scanf("%d", &age);

    if (age >= 18) {
        printf("You are eligible to vote.\n");
    }
    else {
        years_left = 18 - age;
        printf("You are not eligible to vote.\n");
        printf("You need to wait for %d more year(s) to be eligible.\n", years_left);
    }

    return 0;
}
